.root{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
.swiper{
  height:30vh;
  margin:10rpx;
  margin-bottom: 0rpx;
}
.swiper>swiper{
  height:100%
}
.menu{
   display: flex;
   flex-direction: row;
   align-items: center;
}
.menu .item{
  width:33%;
  height:15vh;
  display: flex;
  flex-direction: column;
  color:pink;
  font-size:10pt;
  align-items: center;
  text-align: center;
}
.menu .item>image{
  border-radius: 50%;
  width:50%;
  height:50%;
}

.content{
  display:flex;
  flex-direction:column;
  align-items: center;
}
.content .item{
  display: flex;
  width:95%;
  margin:10rpx;
  border:solid grey 5rpx;
  border-radius: 4rpx;
  height:13vh;
}
.content .text{
  display: flex;
  flex-direction: column;

}
.content .title{
  color:pink;
  size:10pt
}
.content .data{
  color:grey;
  size:5pt
}
.content .btn{
  height:90%;
  width:30rpx;
  color:pink;
  border:solid 5rpx pink;
  border-radius: 3rpx;
}
.content image{
  height:100%;
  width:25%;
}
button{
  height:100%;
  width:100%;
}